<h1><%= t ".title" %></h1>

<%= form_tag("", method: "post") do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="field mt-2">
    <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-shield-lock"></i>
        </span>
      <%= text_field_tag :pincode,
                         params[:pincode],
                         placeholder: t("activerecord.attributes.event.pincode"),
                         class: "form-control" %>
    </div>
  </div>

  <div class="actions mt-3">
    <%= submit_tag t(".open"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "На главную", events_path %>
</div>
