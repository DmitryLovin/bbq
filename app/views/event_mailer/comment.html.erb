<h1><%= t '.title' %></h1>
<p><%= @comment.body %></p>
<p><%= t '.author' %>:
  <strong>
    <% if(@comment.user.present?) %>
      <%= link_to @comment.user_name, user_url(@comment.user) %>
    <% else %>
      <%= @comment.user_name %>
    <% end %>
  </strong>
</p>
<hr/>

<%= t '.event' %>
<h3><%= link_to @event.title, url_for(@event) %></h3>

<%= t '.datetime' %>
<h4><%= l @event.datetime %></h4>

<%= t '.owner' %>
<h4><%= link_to @event.user.name, user_url(@event.user) %></h4>

